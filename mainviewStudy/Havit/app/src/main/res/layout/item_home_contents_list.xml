<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_width="130dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/iv_contents"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_contents"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_contents"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/ic_category"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintDimensionRatio="1"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_home_contents_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="카테고리 이름"
            android:textColor="@color/purple_text"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        tools:text="헤더입니다 헤더입니다 헤더입니다 헤더임"
        android:textSize="14sp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        android:textColor="@color/havit_gray" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021.11.24"
        android:textSize="9sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/gray_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>